                     this.getServer().getPluginManager().callEvent(event);
 
@@ -541,7 +541,7 @@ public abstract class World implements GeneratorAccess, AutoCloseable {
             try {
                 // CraftBukkit start
                 CraftWorld world = ((WorldServer) this).getWorld();
-                if (world != null) {
